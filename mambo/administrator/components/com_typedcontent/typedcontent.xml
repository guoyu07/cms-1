<?xml version="1.0" encoding="gb2312"?>
<mosinstall type="component" version="4.5.1">
	<name>Typed Content Page</name>
	<author>Mambo Project</author>
	<creationDate>July 2004</creationDate>
	<copyright>(C) 2000 - 2004 Miro International Pty Ltd</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>admin@mamboserver.com</authorEmail>
	<authorUrl>www.mamboserver.com</authorUrl>
	<version>4.5.1</version>
	<description>This shows a single content page</description>
	<params>
		<param name="menu_image" type="imagelist" directory="/images/stories" hide_default="1" default="" label="菜单图片" description="在菜单中显示的小图片，必须存放于 images/stories/ 文件夹中" />
		<param name="pageclass_sfx" type="text" default="" label="页面CSS后缀" description="用来定义页面的css类型的后缀，这样允许页面使用单独的css风格" />
		<param name="back_button" type="list" default="" label="返回按钮" description="显示/隐藏返回按钮，允许返回上一个页面">
			<option value="">使用全局设定值</option>
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="item_title" type="radio" default="1" label="页面标题" description="显示/隐藏页面标题">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="rating" type="list" default="" label="评分" description="显示/隐藏 评分">
			<option value="">使用全局设定</option>
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="author" type="list" default="" label="作者" description="显示/隐藏 文章作者">
			<option value="">使用全局设定</option>
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="createdate" type="list" default="" label="创建时间" description="显示/隐藏 创建时间">
			<option value="">使用全局设定</option>
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="modifydate" type="list" default="" label="Modified Date and Time" description="显示/隐藏 修改时间">
			<option value="">使用全局设定</option>
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="pdf" type="list" default="" label="PDF 图标" description="显示/隐藏 PDF按钮">
			<option value="">使用全局设定</option>
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="print" type="list" default="" label="打印图标" description="显示/隐藏 打印图标">
			<option value="">使用全局设定</option>
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="email" type="list" default="" label="Email图标" description="显示/隐藏 Email 图标">
			<option value="">使用全局设定</option>
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
	</params>
</mosinstall>
