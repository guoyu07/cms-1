<?xml version="1.0" encoding="gb2312"?>
<mosinstall type="component" version="4.5.1">
	<name>Content Category List</name>
	<author>Mambo Project</author>
	<creationDate>July 2004</creationDate>
	<copyright>(C) 2000 - 2004 Miro International Pty Ltd</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>admin@mamboserver.com</authorEmail>
	<authorUrl>www.mamboserver.com</authorUrl>
	<version>4.5.1</version>
	<description>This component shows a listing of items for a particular category</description>
	<params>
		<param name="menu_image" type="imagelist" directory="/images/stories" hide_default="1" default="" label="菜单图片" description="一个小图片，放在菜单项的左边或右边，图片必须在目录 images/stories/ 中" />
		<param name="page_title" type="radio" default="1" label="页面标题" description="显示/隐藏页面标题">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="pageclass_sfx" type="text" size="20" default="" label="页面css后缀" description="用来定义页面的css类型的后缀，这样允许页面使用单独的css风格" />
		<param name="back_button" type="list" default="" label="返回按钮" description="显示/隐藏返回按钮，允许返回上一个页面">
			<option value="">使用全局配置</option>
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="orderby" type="list" default="" label="排序方式" description="这将忽略条目原有的排序方式。">
			<option value="">默认</option>
			<option value="date">日期顺序</option>
			<option value="rdate">日期反序</option>
			<option value="alpha">标题顺序</option>
			<option value="ralpha">标题反序</option>
			<option value="author">作者顺序</option>
			<option value="rauthor">作者反序</option>
			<option value="hits">点击从大到小</option>
			<option value="rhits">点击从小到大</option>
			<option value="order">条目次序</option>
		</param>
		<param name="date_format" type="text" size="15" default="" label="日期格式" description="日期显示的格式，使用PHP的 strftime 命令格式 - 如果留空的话，就使用语言文件中的日期格式" />
		<param name="date" type="list" default="" label="日期栏" description="显示/隐藏日期栏">
			<option value="">使用全局配置</option>
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="author" type="list" default="" label="作者栏" description="显示/隐藏作者栏">
			<option value="">使用全局配置</option>
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="title" type="radio" default="1" label="标题栏" description="显示/隐藏条目标题栏">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="hits" type="list" default="" label="点击栏" description="显示/隐藏点击栏">
			<option value="">使用全局配置</option>
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="headings" type="radio" default="1" label="表头" description="显示/隐藏表头">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="navigation" type="radio" default="1" label="分页导航条" description="显示/隐藏分页导航条">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="order_select" type="radio" default="1" label="排序选择框" description="显示/隐藏排序选择下拉框">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="display" type="radio" default="1" label="显示选择框" description="显示/隐藏显示选择下拉框">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="display_num" type="list" default="50" label="显示数" description="默认的条目显示数">
			<option value="5">5</option>
			<option value="10">10</option>
			<option value="15">15</option>
			<option value="20">20</option>
			<option value="25">25</option>
			<option value="30">30</option>
			<option value="50">50</option>
		</param>
		<param name="filter" type="radio" default="1" label="筛选" description="显示/隐藏筛选功能">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="filter_type" type="list" default="title" label="筛选栏目" description="哪个栏目用来筛选">
			<option value="title">标题</option>
			<option value="author">作者</option>
			<option value="hits">点击</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="other_cat" type="radio" default="1" label="其它分类" description="显示/隐藏其它分类列表">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="empty_cat" type="radio" default="0" label="空分类" description="显示/隐藏空的分类">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="cat_items" type="radio" default="1" label="分类条目数" description="显示/隐藏每个分类的条目数">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="cat_description" type="radio" default="1" label="分类描述" description="显示/隐藏分类的描述，将显示在分类名称下面">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
	</params>
</mosinstall>
